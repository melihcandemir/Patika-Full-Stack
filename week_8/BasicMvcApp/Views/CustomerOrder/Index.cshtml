@model BasicMvcApp.Models.CustomerOrderViewModel

<h1>Müşteri Bilgileri</h1>
<p>ID: @Model?.Customers?.Id</p>
<p>Adı: @Model?.Customers?.FirstName</p>
<p>Soyadı: @Model?.Customers?.LastName</p>
<p>E-posta: @Model?.Customers?.Email</p>

@if (Model?.Orders != null)
{
    <h2>Siparişler</h2>
    <table border="1">
        <tr>
            <th>Sipariş ID</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Miktar</th>
        </tr>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductName</td>
                <td>@order.Price</td>
                <td>@order.Quantity</td>
            </tr>
        }
    </table>
}
else
{
    <p>Siparişler bulunmamaktadır.</p>
}
</table>